# Step 1: install and build
FROM node:22-slim AS builder

WORKDIR /app

## Install
COPY package*.json ./
RUN npm install

COPY ./src ./src
COPY ./prisma ./prisma
COPY ./tsconfig.json ./

## Build the app
RUN npm run prisma-generate
RUN npm run build

# Step 2: runtime
FROM node:22-slim AS runtime

WORKDIR /app

# Create a non-root user
RUN addgroup --system --gid 1001 nodejs
RUN adduser --system --uid 1001 appuser

# Copy production dependencies configuration
COPY --from=builder /app/package*.json ./
COPY --from=builder /app/node_modules ./node_modules

# Copy built application
COPY --from=builder /app/dist ./dist
COPY --from=builder /app/generated ./generated
COPY --from=builder /app/prisma ./prisma

# Copy utility scripts
COPY ./docker/dynamodb ./docker/dynamodb
COPY ./docker/app/wait-for-it.sh /usr/local/bin/wait-for-it.sh
COPY ./docker/app/entrypoint.consumer.sh /usr/local/bin/entrypoint.sh
RUN chmod +x /usr/local/bin/entrypoint.sh \
    && chmod +x /usr/local/bin/wait-for-it.sh

# Change ownership and switch user
RUN chown -R appuser:nodejs /app
USER appuser

ENTRYPOINT ["entrypoint.sh"]
CMD ["npm", "run", "consumer-up"]
